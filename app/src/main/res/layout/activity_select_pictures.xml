<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tiantiannews.ui.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="@color/white"></com.tiantiannews.ui.widget.NavigationView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1"
        android:background="@color/line_divider" />

    <GridView
        android:id="@+id/gv_select_pictures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/offset_8"
        android:background="@color/white"
        android:horizontalSpacing="@dimen/offset_2"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/offset_2" />

</LinearLayout>

