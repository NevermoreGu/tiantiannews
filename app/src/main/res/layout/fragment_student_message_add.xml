                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_student_message_add_father_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/offset_16"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="13260778082"
                        android:textColor="@color/black_secondary"
                        android:textSize="@dimen/font_size_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/offset_16"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offset_1_px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/offset_16"
                    android:background="@color/black_divers"></View>

                <LinearLayout
                    android:id="@+id/rl_student_message_add_mother_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offset_48"
                    android:background="@drawable/bg_item_transparent_select"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/offset_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/mother_name"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_student_message_add_mother_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
