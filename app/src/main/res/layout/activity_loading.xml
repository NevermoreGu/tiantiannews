<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircularCD
                        android:id="@+id/lv_circularCD"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="startAnim"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircularRing
                        android:id="@+id/lv_circularring"
                        android:layout_width="50dp"

                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircular
                        android:id="@+id/lv_circular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVFinePoiStar
                        android:id="@+id/lv_finePoiStar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircularSmile
                        android:id="@+id/lv_circularSmile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVGears
                        android:id="@+id/lv_gears"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVGearsTwo
                        android:id="@+id/lv_gears_two"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:onClick="startAnim"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVWifi
                        android:id="@+id/lv_wifi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircularJump
                        android:id="@+id/lv_circularJump"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVCircularZoom
                        android:id="@+id/lv_circularZoom"
                        android:layout_width="50dp"

                        android:layout_height="50dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVPlayBall
                        android:id="@+id/lv_playball"
                        android:layout_width="50dp"

                        android:layout_height="50dp"
                        android:onClick="startAnim"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVNews
                        android:id="@+id/lv_news"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:onClick="startAnim"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVChromeLogo
                        android:id="@+id/lv_chromeLogo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:onClick="startAnim"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVRingProgress
                        android:id="@+id/lv_ringp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:onClick="startAnim"
                        ></com.ldoublem.loadingviewlib.LVRingProgress>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVBlock
                        android:id="@+id/lv_block"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <com.ldoublem.loadingviewlib.LVFunnyBar
                        android:id="@+id/lv_funnybar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:onClick="startAnim"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ldoublem.loadingviewlib.LVGhost
                        android:id="@+id/lv_ghost"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:onClick="startAnim"
                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    >

                    <com.ldoublem.loadingviewlib.LVEatBeans
                        android:id="@+id/lv_eatBeans"
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:onClick="startAnim"
                        />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@android:color/white"
                >

                <com.ldoublem.appleviewlib.LVComputerDesktop
                    android:layout_width="370dp"
                    android:layout_height="210dp"
                    android:layout_centerInParent="true"/>

                <com.ldoublem.loadingviewlib.LVBattery
                    android:id="@+id/lv_battery"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:onClick="startAnim"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@android:color/white"
                >

                <com.ldoublem.appleviewlib.LVComputer
                    android:layout_width="350dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"/>


                <com.ldoublem.loadingviewlib.LVLineWithText
                    android:id="@+id/lv_linetext"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="175dp"
                    android:onClick="startAnim"
                    />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:onClick="startAnimAll"
        android:text="start all"
        android:textColor="@android:color/black"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:onClick="stopAnim"
        android:text="stop"

        android:textColor="@android:color/black"/>


</RelativeLayout>
