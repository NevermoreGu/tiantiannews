                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offset_48"
                    android:background="@drawable/bg_item_transparent_select"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/offset_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/background"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:layout_width="@dimen/offset_0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/offset_16"
                        android:layout_marginRight="@dimen/offset_16"
                        android:layout_weight="1"></TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/offset_16"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
